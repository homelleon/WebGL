doctype html
html
	head
	meta(charset = 'utf-8')
	meta(name='viewport', content="initial-scale=1.0", width="device-width")
	title WebGL Testing
	body
		div(id="shaders" style="visibility:hidden")
			div(id="shader-fs") void main(void) { gl_FragColor = vec4(1.0, 1.0, 1.0, 1.0); }
			div(id="shader-vs") attribute vec3 in_position; uniform mat4 projectionMatrix; uniform mat4 viewMatrix; void main(void) { gl_Position = viewMatrix * projectionMatrix * vec4(in_position, 1.0);}
		h1 WebGL
		canvas(id="gl", width="1024px", height="768px")
		img(src=require("./crate.png") width="100")